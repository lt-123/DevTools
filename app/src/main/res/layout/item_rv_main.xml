<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_rv_lr"
    android:layout_marginRight="@dimen/item_rv_lr"
    android:layout_marginTop="@dimen/item_rv_top"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/app_icon"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginRight="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_app_title"
                android:textColor="@color/tv_main"
                android:textSize="@dimen/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_string" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Test(1123)" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_margin="6dp"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</android.support.v7.widget.CardView>